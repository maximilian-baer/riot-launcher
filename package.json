{
  "name": "riot-launcher",
  "displayName": "RIOT Launcher",
  "description": "Through this extension the user will be able to build, flash and enter the RIOT console via the User Interface of VS-Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "riot-launcher.riotFlash",
        "title": "RIOT Flash"
      },
      {
        "command": "riot-launcher.riotTerm",
        "title": "RIOT Term"
      },
      {
        "command": "riot-launcher.selectBoard",
        "title": "RIOT Board Selection"
      },
      {
        "command": "riot-launcher.selectExampleFolder",
        "title": "RIOT Example Folder Selection"
      },
      {
        "command": "riot-launcher.setRiotPath",
        "title": "RIOT Set Path"
      },
      {
        "command": "riot-launcher.setActiveExampleFolder",
        "title": "RIOT Set Active"
      }
    
    ],
    "configuration": {
      "title": "RIOT Launcher",
      "properties": {
        "riot-launcher.riotPath": {
          "type": "string",
          "default": "/path/to/your/riot",
          "description": "Path to the RIOT OS installation directory."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riotContainer",
          "title": "RIOT",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "riotContainer": [
        {
          "id": "riotView",
          "name": "RIOT Tools"
        }
      ]
    },
    "menus": {
      "activationEvents": [
        {
          "command": "riot-launcher.selectBoard",
          "when": "view == riotView",
          "group": "navigation@1"
        },
        {
          "command": "riot-launcher.selectExampleFolder",
          "when": "view == riotView",
          "group": "navigation@2"
        },
        {
          "command": "riot-launcher.setRiotPath",
          "when": "view == riotView",
          "group": "navigation@3"
        },
        {
          "command": "riot-launcher.riotFlash",
          "when": "view == riotView",
          "group": "navigation@4"
        },
        {
          "command": "riot-launcher.riotTerm",
          "when": "view == riotView",
          "group": "navigation@5"
        }
      ],
      "explorer/context": [
        {
          "command": "riot-launcher.setActiveExampleFolder",
          "when": "explorerResourceIsRoot",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/shelljs": "^0.8.17",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  }
}
