{
  "name": "riot-launcher",
  "displayName": "RIOT Launcher",
  "description": "Through this extension the user will be able to build, flash and enter the RIOT console via the User Interface of VS-Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "riot-launcher.riotFlash",
        "title": "RIOT Flash"
      },
      {
        "command": "riot-launcher.riotTerm",
        "title": "RIOT Term"
      },
      {
        "command": "riot-launcher.selectBoard",
        "title": "RIOT Board Selection"
      },
      {
        "command": "riot-launcher.selectExampleFolder",
        "title": "RIOT Example Folder Selection"
      },
      {
        "command": "riot-launcher.setRiotPath",
        "title": "RIOT Set Path"
      },
      {
        "command": "riot-launcher.setActiveExampleFolder",
        "title": "RIOT Set Active"
      },
      {
        "command": "riot-launcher.detectPorts",
        "title": "RIOT Detect Ports"
      },
      {
        "command": "riot-launcher.changePortDevice",
        "title": "Change Port",
        "icon": "$(gear)"
      },
      {
        "command": "riot-launcher.changeBoardDevice",
        "title": "Change Board",
        "icon": "$(circuit)"
      },
      {
        "command": "riot-launcher.removeDevice",
        "title": "Delete Device",
        "icon": "$(trash)"
      },
      {
        "command": "riot-launcher.addDevice",
        "title": "Add Device",
        "icon": "$(plus)"
      },
      {
        "command": "riot-launcher.changeFolderDevice",
        "title": "Change Device",
        "icon": "$(gear)"
      }
      
    ],
    "configuration": {
      "title": "RIOT Launcher",
      "properties": {
        "riot-launcher.riotPath": {
          "type": "string",
          "default": "/path/to/your/riot",
          "description": "Path to the RIOT OS installation directory."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riotContainer",
          "title": "RIOT",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "riotContainer": [
        {
          "id": "riotView",
          "name": "RIOT Tools"
        },
        {
          "id": "deviceView",
          "name": "Connected Devices"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "riot-launcher.setActiveExampleFolder",
          "when": "explorerResourceIsRoot",
          "group": "navigation"
        },
        {
          "command": "riot-launcher.changeFolderDevice",
          "when": "explorerResourceIsRoot",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "riot-launcher.changePortDevice",
          "when": "view == deviceView && viewItem == riot-device",
          "group": "1_modification"
        },
        {
          "command": "riot-launcher.changeBoardDevice",
          "when": "view == deviceView && viewItem == riot-device",
          "group": "1_modification"
        },
        {
          "command": "riot-launcher.removeDevice",
          "when": "view == deviceView && viewItem == riot-device",
          "group": "2_destructive"
        }
      ],
      "view/title": [
        {
          "command": "riot-launcher.addDevice",
          "when": "view == deviceView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/shelljs": "^0.8.17",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
