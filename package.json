  {
  "name": "riot-launcher",
  "displayName": "RIOT Launcher",
  "description": "Through this extension the user will be able to build, flash and enter the RIOT console via the User Interface of VS-Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "riot-launcher.riotFlash",
        "title": "RIOT Flash"
      },
      {
        "command": "riot-launcher.riotTerm",
        "title": "RIOT Term"
      },
      {
        "command": "riot-launcher.selectBoard",
        "title": "RIOT Board Selection"
      }

    ],
    "statusBar": {
      "items": [
        {
          "id": "riotFlash",
          "name": "RIOT Flash",
          "text": "$(play) flash",
          "command": "riot-launcher.riotFlash",
          "alignment": "left"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
